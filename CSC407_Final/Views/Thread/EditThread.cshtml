@model CSC407_Final.Models.Thread

@{
    ViewBag.Title = "Edit Thread";
}

<h2>Edit Thread</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thread</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.threadId)
        @Html.HiddenFor(model => model.postDate)
        @Html.HiddenFor(model => model.username)


        <div class="form-group">
            
            <div class="col-md-10">
                @Html.Label("Title:")
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                @Html.Label("Body:")
                @Html.EditorFor(model => model.postText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.postText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ThreadList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model CSC407_Final.Models.Comment

@{
    ViewBag.Title = "CreateComment";
}

<h2>CreateComment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        <div class="form-group">
            @Html.HiddenFor(model => model.username, new { Value = User.Identity.Name })
            @Html.ValidationMessageFor(model => model.username)

        </div>
        <div class="form-group">
            @Html.HiddenFor(model => model.threadId, new { Value = Request["id"] })
            @Html.ValidationMessageFor(model => model.threadId)

        </div>



        <div class="form-group">
            
            <div class="col-md-10">
                @Html.LabelFor(model => model.comment);
                @Html.EditorFor(model => model.comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Thread List", "ThreadList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
